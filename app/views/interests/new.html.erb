<div class="row">
  <h2 class="text-center">What Interests You?</h2>
</div>

<div class="row">
  <h3 class="text-center">Quizzes realating to your interests will show up in "My Quizzes".</h3>
</div>

<%= form_tag user_interests_path do %>
  <% @interests.each_with_index do |interest, index| %>
    <%= fields_for 'interests[]', interest do |f| %>
      <div class="row">
        <div class = "small-offset-3 small-6 columns">
          <%= f.label :interest, class: 'input-group-label' %>
          <%= f.text_field :interest, class: 'interests', id: "interest-field-#{index + 1}" %>
        </div>
        <div class = "small-offset-3 columns"></div>
      </div>
    <% end %>
  <% end %>
  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <%= submit_tag "Add Interests", class: "hollow button" %>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>
<% end %>

<div class="row">
  <div class = "small-offset-3 small-6 columns">
    <div class='hollow button'>
      <%= link_to "No Interests", user_interests_path(current_user) %>
    </div>
  </div>
  <div class = "small-offset-3 columns"></div>
</div>
