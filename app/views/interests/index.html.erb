<div class="big-card">
  <h2 class="text-center">Your Interests</h2>

  <div class="row">
    <h3 class="text-center">Quizzes realating to your interests will show up in "My Quizzes".</h3>
  </div>

  <% if current_user.interests[0] %>
    <ul>
      <% @interests.each_with_index do |interest, index| %>
        <div class="center">
          <li>
            <h4><%= interest.interest %></h4>
          </li>
          <div class="row">
            <div class = "small-offset-3 small-6 columns">
              <div class="hollow button">
                <%= link_to "Edit Interest", edit_user_interest_path(current_user, interest), id: "edit-interest-#{index + 1}" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class = "small-offset-3 small-6 columns">
              <div class="hollow button">
                <%= link_to "Delete Interest", user_interest_path(current_user, interest), method: :delete, id: "delete-interest-#{index + 1}" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </ul>
    <% unless @interests.length == 10 %>
      <div class="row">
        <div class = "small-offset-3 small-6 columns">
          <div class="hollow button">
            <%= link_to "Add Interests", new_user_interest_path(current_user) %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h3 class="text-center">You don't have any interests!</h3>
    <div class="row">
      <div class = "small-offset-3 small-6 columns">
        <div class="hollow button">
          <%= link_to "Add Interests", new_user_interest_path(current_user) %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class = "small-offset-3 small-6 columns">
      <div class='hollow button'>
        <%= link_to "Go Back", root_path %>
      </div>
    </div>
    <div class = "small-offset-3 columns"></div>
  </div>
</div>
