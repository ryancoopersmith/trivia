<% @interests.each do |interest| %>
  <%= form_for(interest) do |f| %> <!--add user to form !-->
    <div class="row">
      <div class = "small-offset-3 small-6 columns">
        <%= f.label :interest, class: 'input-group-label' %>
        <%= f.text_field :interest %>
      </div>
      <div class = "small-offset-3 columns"></div>
    </div>

    <div class="row">
      <div class = "small-offset-3 small-6 columns">
        <%= f.submit "Add Interest", class: "hollow button defcon-5" %>
      </div>
      <div class = "small-offset-3 columns"></div>
    </div>
  <% end %>
<% end %>
